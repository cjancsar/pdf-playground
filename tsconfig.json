{
  "compilerOptions": {
    "target": "ESNext",                          
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": true,
    "incremental": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"]
}
